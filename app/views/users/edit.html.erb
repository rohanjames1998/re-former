<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited your update request</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>




<%= form_with model: @user do |form| %>
  <%= form.label(:email, "Email")%>
  <%= form.email_field :email, placeholder: "foo@bar" %>
  <%= form.label(:username, "Your user name here")%>
  <%= form.text_field :username, value: "fooBar"%>
  <%= form.label(:password, "Password")%>
  <%= form.password_field :password%>
  <%= form.submit "Create" %>
<% end %>
